<div class="container">
	<div class="row justify-content-lg-center">
		<div class="col-lg-10">
			<div class="tab-content" id="myTabContent">
                <h3 class="register-heading">Register a user</h3>
				<form action="reg" method="POST">
					<div class="row register-form justify-content-lg-center">
						<div class="col-lg-5">
							<div class="form-group">
								<input type="text" name = "firstname" class="form-control" placeholder="First Name *" value="" required />
							</div>
							<div class="form-group">
								<input type="email" name = "email" class="form-control" placeholder="Your Email *" value="" required />
							</div>
							<div class="form-group">
								<input type="password" id="pwd" name="password" onblur="compare();" class="form-control" placeholder="Password *" value="" required />
							</div>
							<div class="form-group">
								<select name = "question" class="form-control" required>
									<option class="hidden"  selected disabled>Please select your Sequrity Question</option>
									<option>What is your Birthdate?</option>
									<option>What is Your old Phone Number</option>
									<option>What is your Pet Name?</option>
								</select>
							</div>
							<div class="form-group" required>
								<select name = "state" class="form-control">
									<option class="hidden"  selected disabled>Please select your state</option>
									<option>QLD</option>
									<option>NSW</option>
									<option>ACT</option>
									<option>NT</option>
									<option>SA</option>
									<option>TAS</option>
									<option>VIC</option>
									<option>WA</option>
									<option>International</option>
								</select>
							</div>
							<!-- Radio buttons choosing gender -->
							<div>
								<input type="radio" name="gender" value="male" checked>
								<span>Male</span>
							</div>
							<div>
								<input type="radio" name="gender" value="female">
								<span>Female</span>
							</div>
							<div>
								<input type="radio" name="gender" value="other">
								<span>Other</span>
							</div>
						</div>
						<div class="col-lg-5">
							<div class="form-group">
								<input name = "lastname" type="text" class="form-control" placeholder="Last Name *" value="" required />
							</div>
							<div class="form-group">
								<input type="text" name = "phone" minlength="10" maxlength="10" name="txtEmpPhone" class="form-control" placeholder="Your Phone (Optional)" value="" />
							</div>
							<div class="form-group">
								<input type="password" id="pwdc" onblur="compare();" name="passwordCheck" class="form-control"  placeholder="Confirm Password *" value="" required  />
							</div>
							<div class="form-group">
								<input type="text" name = "answer" class="form-control" placeholder="Enter Your Answer *" value="" required />
							</div>
							<input type="submit" class="btnRegister" id="regUser" value="Register"/>
						</div>
					</div>
				</form>
				<div class="alert alert-danger" role="alert" style="display: none;" id="warning">
					Mismatching passwords
				</div>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
	function compare() {
		var form1 = document.getElementById('pwd');
		var form2 = document.getElementById('pwdc');
		var form3 = document.getElementById('warning');
		var form4 = document.getElementById('regUser');
		if(form1.value != form2.value) {
			form1.style.borderColor = "red";
			form2.style.borderColor = "red";
			form3.style.display = "block";
			form4.disabled = true;
		}
		else {
			form1.style.borderColor = "#ced4da";
			form2.style.borderColor = "#ced4da";
			form3.style.display = "none";
			form4.disabled = false;
		}
	}
</script>
